@using SOZ_project.Enums;
@model IEnumerable<SOZ_project.Models.ReportModel>

@{
    ViewData["Title"] = "Lista osób zaginionych";
}

<h1>Lista Główna Osób Zaginionych</h1>

<p>
    <a asp-action="Create">Nowe Zgłoszenie</a>
</p>

@Html.ActionLink("Kobiety", "Index", new {gender=1}) |
@Html.ActionLink("Meżczyźni", "Index", new {  gender=2 }) |

